# ============================
# Project Settings
# ============================
PORT=your_port_no   # Port number on which the application will run

# ============================
# PostgreSQL Database Settings
# ============================
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_db_host
DB_PORT=5432
DB_NAME=your_db_name
DB_SERVICEURL=your_postgres_connection_url

# Certificate Authority used for SSL connection to PostgreSQL
DB_CA="-----BEGIN CERTIFICATE-----
PASTE_YOUR_CERTIFICATE_HERE
-----END CERTIFICATE-----"

# ======================
# Email SMTP Credentials
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_MAIL=your_email@gmail.com

# ====================
# Application Security
# ====================
JWT_SECRET=your_jwt_secret
SESSION_SECRET=your_session_secret
